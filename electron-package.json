{
    "name": "edgeview-launcher",
    "version": "1.0.0",
    "description": "EdgeView Launcher - Electron Edition",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.edgeview.launcher",
        "productName": "EdgeView Launcher",
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": "dmg",
            "extraResources": [
                {
                    "from": "edgeview-backend",
                    "to": "edgeview-backend"
                }
            ]
        },
        "win": {
            "target": "nsis",
            "extraResources": [
                {
                    "from": "edgeview-backend.exe",
                    "to": "edgeview-backend.exe"
                }
            ]
        },
        "linux": {
            "target": ["AppImage", "deb"],
            "category": "Development",
            "extraResources": [
                {
                    "from": "edgeview-backend",
                    "to": "edgeview-backend"
                }
            ]
        },
        "files": [
            "electron-main.js",
            "electron-preload.js",
            "backendClient.js",
            "frontend/dist/**/*"
        ]
    }
}
