{
  "name": "edgeview-launcher",
  "version": "1.0.0",
  "description": "EdgeView Launcher - Electron Edition",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:frontend && npm run build:backend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "go build -o edgeview-backend http-server.go app.go"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.edgeview.launcher",
    "productName": "EdgeView Launcher",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "edgeview-backend",
        "to": "edgeview-backend"
      }
    ],
    "directories": {
      "output": "dist-electron"
    }
  }
}